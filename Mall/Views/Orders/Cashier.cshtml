@model Orders
@{
    ViewBag.Title = "收银台";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="item container" style="background-color: white;width: 100%">
    <div style="display:flex;justify-content:center;align-items:center">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" style="color:darkseagreen;margin: 10px" class="bi bi-cart-check-fill" viewBox="0 0 16 16">
            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm-1.646-7.646-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L8 8.293l2.646-2.647a.5.5 0 0 1 .708.708z" />
        </svg>
        <div>
            <p style="font-size: 25px;margin-top:20px;margin-bottom:0px">
                订单提交成功,应支付金额<strong style="color:orange;font-size:25px">&yen;@Model.Total.Value.ToString("0.00")</strong>
            </p>
            <p>
                订单号: @Model.OrdersID 请在1日内完成支付,否则订单会被取消
            </p>
        </div>
    </div>
    <h2 style="margin-top:30px">支付方式</h2>
    <form action="/Orders/Cashier" method="post">
        <input type="hidden" name="OrdersID" value="@Model.OrdersID"/>
        <div>
            <ul class="list-group" style="margin-top: 10px;margin-bottom: 50px">
                <li class="list-group-item">
                    <input class="form-check-input" type="radio" checked name="PayType" value="0">
                    支付宝
                </li>
                <li class="list-group-item">
                    <input class="form-check-input" type="radio" name="PayType" value="1">
                    微信
                </li>
            </ul>
        </div>
        <button type="submit" class="btn btn-success">立即支付</button>
    </form>
</div>

